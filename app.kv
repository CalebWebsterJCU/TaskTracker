BoxLayout:
    orientation: "horizontal"
    BoxLayout:
        orientation: "vertical"
        size_hint_x: 0.3
        Label:
            text: "Sort by:"
        Spinner:
            id: sorting_attribute_selection
            text: app.current_spinner_selection
            values: app.spinner_selections
            on_text:
                app.current_spinner_selection = self.text
                app.refresh_buttons()
        Label:
            text: "Add New Task:"
        Label:
            text: "Name:"
        TextInput:
            id: name_input
            multiline: False
            write_tab: False
        Label:
            text: "Subject:"
        TextInput:
            id: subject_input
            multiline: False
            write_tab: False
        Label:
            text: "Priority:"
        TextInput:
            id: priority_input
            multiline: False
            write_tab: False
        Button:
            text: "Add Task"
            on_press: app.add_task()
        Button:
            text: "Clear"
            on_press: app.clear_widget_text(name_input, subject_input, priority_input, info_panel)
    BoxLayout:
        orientation: "vertical"
        Label:
            id: tasks_to_complete
            size_hint_y: 0.1
            text: app.tasks_to_complete_text
        BoxLayout:
            orientation: "vertical"
            id: tasks_box
        Label:
            id: info_panel
            size_hint_y: 0.1
            text: app.info_panel_text
<Widget>:
    font_size: 17

<Button>:
    background_color: .6, .2, .4, 1

<PrioritySpinner>:
    values: ("-1", "+1")
    font_size: 18
    size_hint_x: 0.1
    option_cls: app.priority_spinner_options
    on_text: app.increment_priority(self)

<TaskLabel>:
    text_size: self.size
    padding: 15, 0
    halign: "left"
    valign: "center"

<HelpPopup>:
    title_size: 17
    separator_color: .6, .2, .4, 1
    separator_height: "4dp"
    BoxLayout:
        orientation: "vertical"
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            Label:
                size_hint_y: None
                height: self.texture_size[1]
                text: app.help_content
                font_size: 16
                text_size: self.width, app.help_label_height
                valign: "top"
                padding: (5, 5)
        Button:
            text: "Close"
            size_hint_y: 0.15
            on_release: root.dismiss()

BoxLayout:
    orientation: "horizontal"
    BoxLayout:
        orientation: "vertical"
        size_hint_x: 0.3
        Label:
            text: "Sort by:"
        Spinner:
            text: "Priority"
            id: sorting_attribute_selection
            option_cls: app.sorting_spinner_options
            values: app.spinner_selections
            on_text: app.refresh_buttons()
        Button:
            text: "Reverse Sorting"
            on_press: app.reverse_sorting()
        Button:
            text: "Group / Ungroup"
            on_press: app.group_or_ungroup()
        Label:
            text: "Add New Task:"
        TextInput:
            hint_text: "Name:"
            id: name_input
            multiline: False
            write_tab: False
        TextInput:
            hint_text: "Subject:"
            id: subject_input
            multiline: False
            write_tab: False
        TextInput:
            hint_text: "Priority:"
            id: priority_input
            multiline: False
            write_tab: False
        TextInput:
            hint_text: "Due Date (optional):"
            id: due_date_input
            multiline: False
            write_tab: False
        Button:
            text: "Add Task"
            on_press: app.add_task()
        Button:
            text: "Clear"
            on_press: app.clear_widget_text(name_input, subject_input, priority_input, due_date_input, info_panel)
        Button:
            text: "Remove Completed"
            on_press: app.remove_completed_tasks()
        Button:
            text: "Help"
            on_press: app.show_help_popup()
    BoxLayout:
        orientation: "vertical"
        Label:
            id: tasks_to_complete
            size_hint_y: 0.1
            text: app.tasks_to_complete_text
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                rows: app.number_of_buttons
                cols: 2
                row_default_height: 50
                row_force_default: True
                id: tasks_box
                size_hint_y: None
                height: app.tasks_box_height
        Label:
            id: info_panel
            size_hint_y: 0.1
            text: app.info_panel_text

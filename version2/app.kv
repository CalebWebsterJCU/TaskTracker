<PrioritySpinner>:
    values: ("+1", "-1")
    size_hint_x: 0.1
    option_cls: app.priority_spinner_options
    on_text: app.increment_priority(self)

BoxLayout:
    orientation: "horizontal"
    BoxLayout:
        orientation: "vertical"
        size_hint_x: 0.3
        Label:
            text: "Sort by:"
        Spinner:
            id: sorting_attribute_selection
            text_autoupdate: True
            background_color: .6, .2, .4, 1
            option_cls: app.sorting_spinner_options
            values: ("Priority", "Name", "Subject")
            on_text: app.refresh_buttons()
        Button:
            text: "Reverse Sorting"
            background_color: .6, .2, .4, 1
            on_press: app.reverse_sorting()
        Label:
            text: "Add New Task:"
        TextInput:
            hint_text: "Name:"
            id: name_input
            multiline: False
            write_tab: False
        TextInput:
            hint_text: "Subject:"
            id: subject_input
            multiline: False
            write_tab: False
        TextInput:
            hint_text: "Priority:"
            id: priority_input
            multiline: False
            write_tab: False
        Button:
            text: "Add Task"
            background_color: .6, .2, .4, 1
            on_press: app.add_task()
        Button:
            text: "Clear"
            background_color: .6, .2, .4, 1
            on_press: app.clear_widget_text(name_input, subject_input, priority_input, info_panel)
        Button:
            text: "Remove Completed"
            background_color: .6, .2, .4, 1
            on_press: app.remove_completed_tasks()
    BoxLayout:
        orientation: "vertical"
        Label:
            id: tasks_to_complete
            size_hint_y: 0.1
            text: app.tasks_to_complete_text
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                rows: app.number_of_buttons
                cols: 2
                row_default_height: 50
                row_force_default: True
                id: tasks_box
                size_hint_y: None
                height: app.tasks_box_height
        Label:
            id: info_panel
            size_hint_y: 0.1
            text: app.info_panel_text
